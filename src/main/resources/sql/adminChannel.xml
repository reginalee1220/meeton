<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="adminChannel">
    <!--채널 이름,프로필 가져오기-->
    <select id="ac_getUser" parameterType="String" resultType="user">
        select aka, profile from user where userid=#{userid}
    </select>

    <!-- 최신 동영상 실적 -->
    <select id="ac_getVideo" parameterType="String" resultType="video">
        select * from video where userid=#{userid} order by register desc limit 1
    </select>

    <!-- 채널 분석 -->
    <select id="ac_getChannel" parameterType="String" resultType="channel">
        select * from channel where userid=#{userid}
    </select>

    <!-- 총 조회수 -->
    <select id="ac_getViews" parameterType="String" resultType="int">
        select sum(views) from video where userid=#{userid};
    </select>

    <!-- 인기 동영상 -->
    <select id="ac_getTopVideo" parameterType="String" resultType="video">
        select * from video where userid=#{userid} order by views desc limit 1
    </select>

    <!--총 동영상 갯수 구해오기-->
    <select id="ac_getListCount" parameterType="String" resultType="int">
        select count(videonum) from video where userid=#{userid}
    </select>

    <!-- 동영상 리스트 -->
    <select id="ac_getVideoList" parameterType="String" resultType="video">
        select * from video where userid=#{userid} order by register desc
    </select>

    <!--최신동영상 번호-->
    <select id="ac_latestvideo" resultType="int">
        select videonum from video order by videonum desc limit 1;
    </select>

    <!--동영상 업로드-->
    <insert id="adminChannel.ac_insertVideo" parameterType="video">
        insert into video (videonum,channelnum, userid,title,description,thumbnail,visibility,register,videofile) values
            (#{videonum} ,#{channelnum},#{userid},#{title},#{description},#{thumbnail,jdbcType=VARCHAR},#{visibility},sysdate(),#{videofile,jdbcType=VARCHAR})
    </insert>


</mapper>